{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "i3config",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "_statement"
      }
    },
    "_statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "comment"
            },
            {
              "type": "SYMBOL",
              "name": "include"
            },
            {
              "type": "SYMBOL",
              "name": "font"
            },
            {
              "type": "SYMBOL",
              "name": "binding"
            },
            {
              "type": "SYMBOL",
              "name": "mode"
            },
            {
              "type": "SYMBOL",
              "name": "floating_modifier"
            },
            {
              "type": "SYMBOL",
              "name": "floating_size"
            },
            {
              "type": "SYMBOL",
              "name": "default_orientation"
            },
            {
              "type": "SYMBOL",
              "name": "workspace_layout"
            },
            {
              "type": "SYMBOL",
              "name": "title_align"
            },
            {
              "type": "SYMBOL",
              "name": "border"
            },
            {
              "type": "SYMBOL",
              "name": "hide_edge_borders"
            },
            {
              "type": "SYMBOL",
              "name": "for_window"
            }
          ]
        },
        {
          "type": "PATTERN",
          "value": "\\n"
        }
      ]
    },
    "comment": {
      "type": "TOKEN",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "#"
          },
          {
            "type": "PATTERN",
            "value": ".*"
          }
        ]
      }
    },
    "for_window": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "for_window"
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SYMBOL",
            "name": "criteria"
          }
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SYMBOL",
            "name": "_value"
          }
        }
      ]
    },
    "criteria": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "["
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "class_criteria"
            },
            {
              "type": "SYMBOL",
              "name": "title_criteria"
            },
            {
              "type": "SYMBOL",
              "name": "all_criteria"
            },
            {
              "type": "SYMBOL",
              "name": "floating_criteria"
            },
            {
              "type": "SYMBOL",
              "name": "window_role_criteria"
            }
          ]
        },
        {
          "type": "STRING",
          "value": "]"
        }
      ]
    },
    "all_criteria": {
      "type": "STRING",
      "value": "all"
    },
    "floating_criteria": {
      "type": "STRING",
      "value": "floating"
    },
    "class_criteria": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "class="
        },
        {
          "type": "FIELD",
          "name": "class",
          "content": {
            "type": "SYMBOL",
            "name": "quoted_string"
          }
        }
      ]
    },
    "window_role_criteria": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "window_role="
        },
        {
          "type": "FIELD",
          "name": "window_role",
          "content": {
            "type": "SYMBOL",
            "name": "quoted_string"
          }
        }
      ]
    },
    "title_criteria": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "title="
        },
        {
          "type": "FIELD",
          "name": "title",
          "content": {
            "type": "SYMBOL",
            "name": "quoted_string"
          }
        }
      ]
    },
    "hide_edge_borders": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "hide_edge_borders"
        },
        {
          "type": "FIELD",
          "name": "value",
          "content": {
            "type": "SYMBOL",
            "name": "hide_edge_borders_value"
          }
        }
      ]
    },
    "hide_edge_borders_value": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "none"
        },
        {
          "type": "STRING",
          "value": "vertical"
        },
        {
          "type": "STRING",
          "value": "horizontal"
        },
        {
          "type": "STRING",
          "value": "both"
        },
        {
          "type": "STRING",
          "value": "smart"
        },
        {
          "type": "STRING",
          "value": "smart_no_gaps"
        }
      ]
    },
    "border": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": "default_floating_border"
            },
            {
              "type": "STRING",
              "value": "default_border"
            },
            {
              "type": "STRING",
              "value": "border"
            }
          ]
        },
        {
          "type": "FIELD",
          "name": "mode",
          "content": {
            "type": "SYMBOL",
            "name": "border_value"
          }
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "FIELD",
              "name": "value",
              "content": {
                "type": "SYMBOL",
                "name": "number"
              }
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "border_value": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "normal"
        },
        {
          "type": "STRING",
          "value": "none"
        },
        {
          "type": "STRING",
          "value": "pixel"
        }
      ]
    },
    "title_align": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "title_align"
        },
        {
          "type": "FIELD",
          "name": "value",
          "content": {
            "type": "SYMBOL",
            "name": "title_align_value"
          }
        }
      ]
    },
    "title_align_value": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "left"
        },
        {
          "type": "STRING",
          "value": "center"
        },
        {
          "type": "STRING",
          "value": "right"
        }
      ]
    },
    "workspace_layout": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "workspace_layout"
        },
        {
          "type": "FIELD",
          "name": "value",
          "content": {
            "type": "SYMBOL",
            "name": "workspace_layout_value"
          }
        }
      ]
    },
    "workspace_layout_value": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "default"
        },
        {
          "type": "STRING",
          "value": "stacking"
        },
        {
          "type": "STRING",
          "value": "tabbed"
        }
      ]
    },
    "default_orientation": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "default_orientation"
        },
        {
          "type": "FIELD",
          "name": "value",
          "content": {
            "type": "SYMBOL",
            "name": "default_orientation_value"
          }
        }
      ]
    },
    "default_orientation_value": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "horizontal"
        },
        {
          "type": "STRING",
          "value": "vertical"
        },
        {
          "type": "STRING",
          "value": "auto"
        }
      ]
    },
    "include": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "include"
        },
        {
          "type": "FIELD",
          "name": "source",
          "content": {
            "type": "SYMBOL",
            "name": "include_source"
          }
        }
      ]
    },
    "include_source": {
      "type": "PATTERN",
      "value": "[^\\s][^\\$][\\w~\\/.*-]*[^\\s\\n]"
    },
    "floating_modifier": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "floating_modifier"
        },
        {
          "type": "FIELD",
          "name": "value",
          "content": {
            "type": "SYMBOL",
            "name": "floating_modifier_value"
          }
        }
      ]
    },
    "floating_modifier_value": {
      "type": "CHOICE",
      "members": [
        {
          "type": "FIELD",
          "name": "reference",
          "content": {
            "type": "SYMBOL",
            "name": "variable"
          }
        },
        {
          "type": "PATTERN",
          "value": "\\w+"
        }
      ]
    },
    "floating_size": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": "floating_minimum_size"
            },
            {
              "type": "STRING",
              "value": "floating_maximum_size"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "number"
        },
        {
          "type": "SYMBOL",
          "name": "floating_size_op"
        },
        {
          "type": "SYMBOL",
          "name": "number"
        }
      ]
    },
    "floating_size_op": {
      "type": "STRING",
      "value": "x"
    },
    "binding": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": "bindsym"
            },
            {
              "type": "STRING",
              "value": "bindcode"
            }
          ]
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "keymap_flags"
          }
        },
        {
          "type": "SYMBOL",
          "name": "keymap"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "criteria"
          }
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SYMBOL",
            "name": "_value"
          }
        }
      ]
    },
    "keymap": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "FIELD",
              "name": "reference",
              "content": {
                "type": "SYMBOL",
                "name": "variable"
              }
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "keymap_trigger"
        }
      ]
    },
    "keymap_trigger": {
      "type": "PATTERN",
      "value": "[a-zA-Z0-9.+]+"
    },
    "keymap_flags": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "--release"
        },
        {
          "type": "STRING",
          "value": "--release"
        },
        {
          "type": "STRING",
          "value": "--border"
        },
        {
          "type": "STRING",
          "value": "--whole-window"
        },
        {
          "type": "STRING",
          "value": "--exclude-titlebar"
        }
      ]
    },
    "font": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "font"
        },
        {
          "type": "SYMBOL",
          "name": "font_name"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "number"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "FIELD",
              "name": "name",
              "content": {
                "type": "SYMBOL",
                "name": "unit"
              }
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "font_name": {
      "type": "PATTERN",
      "value": "[^\\s][^\\d][^\\n]+\\ "
    },
    "font_size": {
      "type": "PATTERN",
      "value": "\\d+(ppt|px)[^\\s\\n]"
    },
    "mode": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "mode"
        },
        {
          "type": "FIELD",
          "name": "name",
          "content": {
            "type": "SYMBOL",
            "name": "mode_name"
          }
        },
        {
          "type": "FIELD",
          "name": "body",
          "content": {
            "type": "SYMBOL",
            "name": "mode_body"
          }
        }
      ]
    },
    "mode_name": {
      "type": "PATTERN",
      "value": "\"([^\"][^\\n]+)?\""
    },
    "mode_body": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "{"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "_statement"
          }
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    },
    "variable": {
      "type": "PATTERN",
      "value": "\\$[a-zA-Z0-9_]+"
    },
    "unit": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "px_unit"
        },
        {
          "type": "SYMBOL",
          "name": "ppt_unit"
        }
      ]
    },
    "px_unit": {
      "type": "STRING",
      "value": "px"
    },
    "ppt_unit": {
      "type": "STRING",
      "value": "ppt"
    },
    "number": {
      "type": "PATTERN",
      "value": "(\\+|-)?\\d+"
    },
    "quoted_string": {
      "type": "TOKEN",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "\""
          },
          {
            "type": "REPEAT",
            "content": {
              "type": "CHOICE",
              "members": [
                {
                  "type": "PATTERN",
                  "value": "[^\"\\n]"
                },
                {
                  "type": "STRING",
                  "value": "\\\""
                }
              ]
            }
          },
          {
            "type": "STRING",
            "value": "\""
          }
        ]
      }
    },
    "_value": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SEQ",
              "members": [
                {
                  "type": "STRING",
                  "value": "mode"
                },
                {
                  "type": "FIELD",
                  "name": "reference_mode",
                  "content": {
                    "type": "SYMBOL",
                    "name": "mode_name"
                  }
                }
              ]
            },
            {
              "type": "FIELD",
              "name": "reference",
              "content": {
                "type": "SYMBOL",
                "name": "variable"
              }
            },
            {
              "type": "FIELD",
              "name": "unit",
              "content": {
                "type": "SYMBOL",
                "name": "unit"
              }
            },
            {
              "type": "SYMBOL",
              "name": "border"
            }
          ]
        },
        {
          "type": "PATTERN",
          "value": "\\n"
        }
      ]
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}
