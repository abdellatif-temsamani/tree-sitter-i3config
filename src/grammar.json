{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "i3config",
  "rules": {
    "source_file": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "statement"
      }
    },
    "statement": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "comment"
        },
        {
          "type": "SYMBOL",
          "name": "binding"
        },
        {
          "type": "SYMBOL",
          "name": "command"
        },
        {
          "type": "SYMBOL",
          "name": "assign"
        },
        {
          "type": "SYMBOL",
          "name": "set"
        },
        {
          "type": "SYMBOL",
          "name": "set_from_resource"
        },
        {
          "type": "SYMBOL",
          "name": "mode"
        },
        {
          "type": "SYMBOL",
          "name": "for_window"
        },
        {
          "type": "SYMBOL",
          "name": "font"
        },
        {
          "type": "SYMBOL",
          "name": "client"
        }
      ]
    },
    "comment": {
      "type": "TOKEN",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "#"
          },
          {
            "type": "PATTERN",
            "value": ".*"
          }
        ]
      }
    },
    "command": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": "exec"
            },
            {
              "type": "STRING",
              "value": "exec_always"
            },
            {
              "type": "STRING",
              "value": "floating_modifier"
            },
            {
              "type": "STRING",
              "value": "tiling_drag"
            },
            {
              "type": "STRING",
              "value": "smart_borders"
            }
          ]
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "SYMBOL",
                "name": "flag"
              },
              {
                "type": "SYMBOL",
                "name": "arg"
              }
            ]
          }
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "REPEAT",
              "content": {
                "type": "SYMBOL",
                "name": "quoted_string"
              }
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "binding": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": "bindsym"
            },
            {
              "type": "STRING",
              "value": "bindcode"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "keymap"
        },
        {
          "type": "SYMBOL",
          "name": "value"
        }
      ]
    },
    "keymap": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "variable"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "keymap_trigger"
        }
      ]
    },
    "keymap_trigger": {
      "type": "PATTERN",
      "value": "[a-zA-Z0-9.+]+"
    },
    "assign": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "assign"
        },
        {
          "type": "SYMBOL",
          "name": "condition"
        },
        {
          "type": "STRING",
          "value": "number"
        },
        {
          "type": "SYMBOL",
          "name": "variable"
        }
      ]
    },
    "client": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "client"
        },
        {
          "type": "SYMBOL",
          "name": "property"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "variable"
          }
        }
      ]
    },
    "property": {
      "type": "PATTERN",
      "value": "\\.\\w+"
    },
    "font": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "font"
        },
        {
          "type": "SYMBOL",
          "name": "font_name"
        },
        {
          "type": "SYMBOL",
          "name": "number"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "unit"
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "font_name": {
      "type": "PATTERN",
      "value": "[^\\s][^\\d][^\\n]+\\ "
    },
    "set": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "set"
        },
        {
          "type": "FIELD",
          "name": "name",
          "content": {
            "type": "SYMBOL",
            "name": "variable"
          }
        },
        {
          "type": "FIELD",
          "name": "value",
          "content": {
            "type": "SYMBOL",
            "name": "value"
          }
        }
      ]
    },
    "set_from_resource": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "set_from_resource"
        },
        {
          "type": "FIELD",
          "name": "name",
          "content": {
            "type": "SYMBOL",
            "name": "variable"
          }
        },
        {
          "type": "SYMBOL",
          "name": "resource"
        },
        {
          "type": "FIELD",
          "name": "value",
          "content": {
            "type": "SYMBOL",
            "name": "value"
          }
        }
      ]
    },
    "for_window": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "for_window"
        },
        {
          "type": "SYMBOL",
          "name": "condition"
        },
        {
          "type": "SYMBOL",
          "name": "value"
        }
      ]
    },
    "condition": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "class_condition"
        },
        {
          "type": "SYMBOL",
          "name": "title_condition"
        }
      ]
    },
    "class_condition": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "[class="
        },
        {
          "type": "SYMBOL",
          "name": "quoted_string"
        },
        {
          "type": "STRING",
          "value": "]"
        }
      ]
    },
    "title_condition": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "[title="
        },
        {
          "type": "SYMBOL",
          "name": "quoted_string"
        },
        {
          "type": "STRING",
          "value": "]"
        }
      ]
    },
    "value": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "value_item"
      }
    },
    "value_item": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "arg"
        },
        {
          "type": "SYMBOL",
          "name": "flag"
        },
        {
          "type": "SYMBOL",
          "name": "variable"
        },
        {
          "type": "SYMBOL",
          "name": "quoted_string"
        }
      ]
    },
    "arg": {
      "type": "PATTERN",
      "value": "[^\\s\"][^-][^-][^\\n\\s]*"
    },
    "flag": {
      "type": "PATTERN",
      "value": "--[^\\s\"][^\\n\\s]*"
    },
    "variable": {
      "type": "TOKEN",
      "content": {
        "type": "FIELD",
        "name": "reference",
        "content": {
          "type": "PATTERN",
          "value": "\\$[a-zA-Z0-9_]+[^\\n\\s]"
        }
      }
    },
    "quoted_string": {
      "type": "PATTERN",
      "value": "\"([^\"][^\\n]+)[^\\n\\s]?\""
    },
    "resource": {
      "type": "PATTERN",
      "value": "[a-zA-Z0-9._-]+"
    },
    "number": {
      "type": "PATTERN",
      "value": "\\d+"
    },
    "unit": {
      "type": "PATTERN",
      "value": "(px|ppt)"
    },
    "bool": {
      "type": "PATTERN",
      "value": "(on|off)"
    },
    "mode": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "mode"
        },
        {
          "type": "FIELD",
          "name": "name",
          "content": {
            "type": "SYMBOL",
            "name": "mode_name"
          }
        },
        {
          "type": "SYMBOL",
          "name": "mode_body"
        }
      ]
    },
    "mode_name": {
      "type": "SYMBOL",
      "name": "quoted_string"
    },
    "mode_body": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "{"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "statement"
          }
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}
