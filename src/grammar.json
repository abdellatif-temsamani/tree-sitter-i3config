{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "i3config",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "statement"
      }
    },
    "statement": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "comment"
        },
        {
          "type": "SYMBOL",
          "name": "include"
        },
        {
          "type": "SYMBOL",
          "name": "font"
        },
        {
          "type": "SYMBOL",
          "name": "binding"
        },
        {
          "type": "SYMBOL",
          "name": "mode"
        }
      ]
    },
    "comment": {
      "type": "TOKEN",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "#"
          },
          {
            "type": "PATTERN",
            "value": ".*"
          }
        ]
      }
    },
    "include": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "include"
        },
        {
          "type": "SYMBOL",
          "name": "include_source"
        }
      ]
    },
    "include_source": {
      "type": "PATTERN",
      "value": "[^\\s][^\\$][\\w~\\/.*-]*[^\\s\\n]"
    },
    "binding": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": "bindsym"
            },
            {
              "type": "STRING",
              "value": "bindcode"
            }
          ]
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "keymap_flags"
          }
        },
        {
          "type": "SYMBOL",
          "name": "keymap"
        },
        {
          "type": "SYMBOL",
          "name": "value"
        }
      ]
    },
    "keymap": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "variable"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "keymap_trigger"
        }
      ]
    },
    "keymap_trigger": {
      "type": "PATTERN",
      "value": "[a-zA-Z0-9.+]+"
    },
    "keymap_flags": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "--release"
        },
        {
          "type": "STRING",
          "value": "--release"
        },
        {
          "type": "STRING",
          "value": "--border"
        },
        {
          "type": "STRING",
          "value": "--whole-window"
        },
        {
          "type": "STRING",
          "value": "--exclude-titlebar"
        }
      ]
    },
    "font": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "font"
        },
        {
          "type": "SYMBOL",
          "name": "font_name"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "number"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "unit"
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "font_name": {
      "type": "PATTERN",
      "value": "[^\\s][^\\d][^\\n]+\\ "
    },
    "font_size": {
      "type": "PATTERN",
      "value": "\\d+(ppt|px)[^\\s\\n]"
    },
    "mode": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "mode"
        },
        {
          "type": "FIELD",
          "name": "name",
          "content": {
            "type": "SYMBOL",
            "name": "mode_name"
          }
        },
        {
          "type": "SYMBOL",
          "name": "mode_body"
        }
      ]
    },
    "mode_name": {
      "type": "PATTERN",
      "value": "\"([^\"][^\\n]+)?\""
    },
    "mode_body": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "{"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "statement"
          }
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    },
    "variable": {
      "type": "TOKEN",
      "content": {
        "type": "FIELD",
        "name": "reference",
        "content": {
          "type": "PATTERN",
          "value": "\\$[a-zA-Z0-9_]+"
        }
      }
    },
    "arg": {
      "type": "PATTERN",
      "value": "[^\\s\"][^-][^-][^\\n\\s]*"
    },
    "flag": {
      "type": "PATTERN",
      "value": "--[^\\s\"][^\\n\\s]*"
    },
    "unit": {
      "type": "PATTERN",
      "value": "(px|ppt)"
    },
    "number": {
      "type": "PATTERN",
      "value": "\\d+"
    },
    "quoted_string": {
      "type": "PATTERN",
      "value": "\"([^\"][^\\n]+)?\""
    },
    "value": {
      "type": "PATTERN",
      "value": "[^\\s][^\\n]+"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}
